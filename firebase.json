{
  "hosting": {
    "public": ".",
    "ignore": [
      "node_modules/**",
      "dist/**",
      "main.js",
      "preload.js",
      "package.json",
      "package-lock.json",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=3600" }
        ]
      }
    ]
  }
}
